<Window x:Class="GesLune.ActeurSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GesLune"
        mc:Ignorable="d"
        Title="ActeurSelectionWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0"
          x:Name="MainDataGrid"
          AutoGenerateColumns="False"
          ItemsSource="{Binding Acteurs}"
          IsReadOnly="True"        
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Acteur_Id}" Visibility="Hidden"/>
                <DataGridTextColumn Header="Raison sociale" Binding="{Binding Acteur_Nom}" />
                <DataGridTextColumn Header="Adresse" Binding="{Binding Acteur_Adresse}" />
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Acteur_Telephone}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Acteur_Email}" />
                <DataGridTextColumn Header="Remarque" Binding="{Binding Acteur_Remarque}" />
                <DataGridTextColumn Header="Type ID" Binding="{Binding Acteur_Type_Id}" Visibility="Hidden"/>
                <DataGridTextColumn Header="City ID" Binding="{Binding Acteur_Ville_Id}"/>
            </DataGrid.Columns>
        </DataGrid>

        <DockPanel Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   >
            <Button Padding="5" Margin = "7 5" Content = "Selectionner" Click="Button_Click_1"/>
            <Button x:Name="Nouveau_Button" Margin="3 6" Content="Nouveau" Padding="10 3" Command="{Binding SaisieNavigationCommand}"/>
            <Button Padding="5" Margin = "7 5"  Content = "Annuler" Click="Button_Click"/>
        </DockPanel>
    </Grid>
</Window>
