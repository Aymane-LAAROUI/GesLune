<Window x:Class="GesLune.KeyBoards.NumericKeyBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GesLune"
        mc:Ignorable="d"
        Title="NumericKeyBoardWindow" Height="400" Width="400">
    <Grid Background="#2E2E2E">
        <TextBox Name="InputTextBox" FontSize="20" VerticalAlignment="Top" Height="40" Margin="10" Padding="5" Background="#FFFFFF" Foreground="#000000" Text="{Binding Query,UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel VerticalAlignment="Bottom" Margin="10">
            <!-- Numeric keys layout -->
            <UniformGrid Rows="4" Columns="3" Margin="5">
                <Button Content="1" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="2" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="3" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="4" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="5" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="6" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="7" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="8" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="9" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="0" Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="." Click="KeyButton_Click" FontSize="18" Padding="10" Margin="2" Background="#4CAF50" Foreground="White"/>
                <Button Content="⌫" Click="BackspaceButton_Click" FontSize="18" Padding="10" Margin="2" Background="#F44336" Foreground="White"/>
            </UniformGrid>

            <UniformGrid Rows="1" Columns="2" Margin="5">
                <Button Content="خروج" Width="100" Click="CloseButton_Click" FontSize="25" Padding="4" Margin="2" Background="#F44336" Foreground="White"/>
                <Button Content="تأكيد" Width="100" Click="ConfirmButton_Click" FontSize="25" Padding="4" Margin="2" Background="#2196F3" Foreground="White"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
