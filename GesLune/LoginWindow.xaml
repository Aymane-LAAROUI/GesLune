<Window x:Class="GesLune.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:GesLune.Sdk.ViewModels;assembly=GesLune.Sdk"
        Title="تسجيل الدخول"
        Height="400"
        Width="350"
        WindowStartupLocation="CenterScreen"
        FocusManager.FocusedElement="{Binding ElementName=UsernameBox}"
        >
    <Window.DataContext>
        <vms:LoginViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid FlowDirection="RightToLeft">
        <!-- Background Panel -->
        <Border Background="#FFFFFF" CornerRadius="10" Margin="20" Padding="20">
            <Grid>
                <!-- Header -->
                <TextBlock Text="تسجيل الدخول" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#2D89EF" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>

                <!-- Login Form -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
                    <!-- Username -->
                    <TextBlock Text="اسم المستخدم" Margin="0,5,0,2" Foreground="Gray"/>
                    <Border Background="#EFEFEF" CornerRadius="5" BorderBrush="#D3D3D3" BorderThickness="1">
                        <TextBox x:Name="UsernameBox"
                                 Height="30" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0" 
                                 Padding="5"
                                 Text="{Binding Username,UpdateSourceTrigger=PropertyChanged}"
                                 />
                    </Border>

                    <!-- Password -->
                    <TextBlock Text="كلمة المرور" Margin="0,10,0,2" Foreground="Gray"/>
                    <Border Background="#EFEFEF" CornerRadius="5" BorderBrush="#D3D3D3" BorderThickness="1">
                        <PasswordBox
                                 x:Name="PasswordBox"
                                 Height="30" 
                                 FontSize="14" 
                                 Background="Transparent" 
                                 BorderThickness="0" 
                                 Padding="5"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 />
                    </Border>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="LoginButton"
                                Content="دخول" 
                                Width="100" 
                                Height="35" 
                                Background="#2D89EF" 
                                Foreground="White" 
                                BorderBrush="#2D89EF" 
                                FontWeight="Bold"
                                Cursor="Hand"
                                Margin="5,0"
                                Command="{Binding LoginCommand}"
                                />

                        <Button x:Name="ExitButton"
                                Content="خروج" 
                                Width="100" 
                                Height="35" 
                                Background="#D9534F" 
                                Foreground="White" 
                                BorderBrush="#D9534F" 
                                FontWeight="Bold"
                                Cursor="Hand"
                                Margin="5,0"
                                Click="ExitButton_Click"
                                />
                    </StackPanel>
                </StackPanel>
                <Label Content="{Binding Error}"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       />
            </Grid>
        </Border>
    </Grid>
</Window>
