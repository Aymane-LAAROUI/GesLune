<Window x:Class="GesLune.Windows.Articles.ArticlesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GesLune.Windows.Articles"
        mc:Ignorable="d"
        Title="DocumentsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Orientation="Horizontal"
                 >
            <Button Content="Fiche de stock"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="10,5" 
                    Click="Button_Click_1"
                    />
        </StackPanel>

        <ListView Grid.Row="1"
                  Grid.Column="0"
                  >
            Tous
        </ListView>
        <DataGrid Grid.Row="1"
                  Grid.Column="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Articles}"
                  IsReadOnly="True"
                  x:Name="MainDataGrid"
                  SelectedItem="{Binding Selected_Article, Mode=TwoWay}"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True">
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Identifiant" Binding="{Binding Article_Id}" Width="100" />
                <DataGridTextColumn Header="Désignation" Binding="{Binding Article_Nom}" Width="200" />
                <DataGridTextColumn Header="Description" Binding="{Binding Article_Description}" Width="300" />
                <DataGridTextColumn Header="Prix" Binding="{Binding Article_Prix, StringFormat=C}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
        <DockPanel Grid.Row="2"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   Margin="6 0"
                   >
            <Button x:Name="Ouvrir_Button" Margin="3 6" Content="Ouvrir" Padding="10 3" Command="{Binding SaisieNavigationCommand}" />
            <Button x:Name="Nouveau_Button" Margin="3 6" Content="Nouveau" Padding="10 3" Command="{Binding SaisieNavigationCommand}"/>
            <Button x:Name="Supprimer_Button" Margin="3 6" Content="Supprimer" Padding="10 3" Click="Supprimer_Button_Click"/>
            <Button x:Name="Fermer_Button" Margin="3 6" Content="Fermer" Padding="10 3" Click="Fermer_Button_Click"/>
        </DockPanel>
    </Grid>
</Window>
