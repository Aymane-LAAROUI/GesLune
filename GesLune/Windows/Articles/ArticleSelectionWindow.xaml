<Window x:Class="GesLune.Windows.Articles.ArticleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GesLune.Windows.Articles"
        mc:Ignorable="d"
        Title="ArticleSelectionWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0"
                  x:Name="MainDataGrid"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Articles}"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Identifiant" Binding="{Binding Article_Id}" Width="100" />
                <DataGridTextColumn Header="Désignation" Binding="{Binding Article_Nom}" Width="200" />
                <DataGridTextColumn Header="Description" Binding="{Binding Article_Description}" Width="300" />
                <DataGridTextColumn Header="Prix" Binding="{Binding Article_Prix, StringFormat=C}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <DockPanel Grid.Row="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               >
            <Button Padding="5" Margin = "7 5" Content = "Selectionner" Click="Button_Click_1"/>
            <Button x:Name="Nouveau_Button" Margin="3 6" Content="Nouveau" Padding="10 3" Command="{Binding SaisieNavigationCommand}"/>
            <Button Padding="5" Margin = "7 5"  Content = "Annuler" Click="Button_Click"/>
        </DockPanel>
    </Grid>
</Window>
