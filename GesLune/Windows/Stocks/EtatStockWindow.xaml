        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GesLune.Windows"
        xmlns:vms="clr-namespace:GesLune.ViewModels.Stocks"
        mc:Ignorable="d"
        Title="EtatStockWindow" Height="450" Width="800">
    <Window.DataContext>
        <vms:EtatStockViewModel/>
    </Window.DataContext>
