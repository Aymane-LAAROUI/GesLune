                <DataGridTextColumn Header="Nom d'article"
                                    Binding="{Binding Etat_Stock_Article_Nom}"
                                    />
                <DataGridTextColumn Header="Stock disponible"
                                    Binding="{Binding Etat_Stock_Quantity}"
                                    />
            </DataGrid.Columns>-->
