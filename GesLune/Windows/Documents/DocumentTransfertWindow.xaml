<Window x:Class="GesLune.Windows.Documents.DocumentTransfertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GesLune.ViewModels"
        mc:Ignorable="d"
        Title="DocumentTransfertWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding Document_Types}"
                  SelectedItem="{Binding SelectedDocumentType}"
                  DisplayMemberPath="Document_Type_Nom"
                  />
        <DockPanel Grid.Row="1"
                   HorizontalAlignment="Right">
            <Button Content="Ok" Margin="3 6" Padding ="10 6" Click="Button_Click"/>
            <Button Content="Annuler" Margin="3 6" Padding ="10 6" Click="Button_Click_1"/>
        </DockPanel>
    </Grid>
</Window>
