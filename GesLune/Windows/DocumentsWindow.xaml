<Window x:Class="GesLune.Windows.DocumentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GesLune"
        mc:Ignorable="d"
        Title="DocumentsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0"
                  AutoGenerateColumns="True"
                  ItemsSource="{Binding Data}"
                  IsReadOnly="True"
                  x:Name="MainDataGrid"
                  />
        <DockPanel Grid.Row="1" HorizontalAlignment="Right" Margin="6 0">
            <Button x:Name="Ouvrir_Button" Margin="3 6" Content="Ouvrir" Padding="10 3"/>
            <Button x:Name="Nouveau_Button" Margin="3 6" Content="Nouveau" Padding="10 3"/>
            <Button x:Name="Supprimer_Button" Margin="3 6" Content="Supprimer" Padding="10 3" Click="Supprimer_Button_Click"/>
            <Button x:Name="Fermer_Button" Margin="3 6" Content="Fermer" Padding="10 3" Click="Fermer_Button_Click"/>
        </DockPanel>
    </Grid>
</Window>
