<Window x:Class="GesLune.Windows.ActeursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GesLune.Windows"
        mc:Ignorable="d"
        Title="ActeursWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Orientation="Horizontal"
             >
            <Button Content="Filtrer"
                Background="Transparent"
                BorderThickness="0"
                Padding="10,5" 
                />
        </StackPanel>
        
        <ListView Grid.Row="1"
              Grid.Column="0"
              SelectedItem="{Binding SelectedFilter}" 
              ItemsSource="{Binding Filtres}"
              DisplayMemberPath="Acteur_Type_Nom"
              >
        </ListView>

        <DataGrid Grid.Row="1"
                  Grid.Column="1"
                  x:Name="MainDataGrid"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Acteurs}"
                  IsReadOnly="True"
                  SelectedItem="{Binding Selected_Acteur, Mode=TwoWay}"
              >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Identifiant" Binding="{Binding Acteur_Id}"/>
                <DataGridTextColumn Header="Raison sociale" Binding="{Binding Acteur_Nom}" />
                <DataGridTextColumn Header="Adresse" Binding="{Binding Acteur_Adresse}" />
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Acteur_Telephone}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Acteur_Email}" />
                <DataGridTextColumn Header="Remarque" Binding="{Binding Acteur_Remarque}" />
                <DataGridTextColumn Header="Type ID" Binding="{Binding Acteur_Type_Id}" Visibility="Hidden" />
                <DataGridTextColumn Header="City ID" Binding="{Binding Acteur_Ville_Id}" />
            </DataGrid.Columns>
        </DataGrid>
        
        <DockPanel Grid.Row="2"
               Grid.Column="1"
               HorizontalAlignment="Right"
               Margin="6 0"
               >
            <Button x:Name="Ouvrir_Button" Margin="3 6" Content="Ouvrir" Padding="10 3" Command="{Binding SaisieNavigationCommand}"/>
            <Button x:Name="Nouveau_Button" Margin="3 6" Content="Nouveau" Padding="10 3" Command="{Binding SaisieNavigationCommand}"/>
            <Button x:Name="Supprimer_Button" Margin="3 6" Content="Supprimer" Padding="10 3" Click="Supprimer_Button_Click"/>
            <Button x:Name="Fermer_Button" Margin="3 6" Content="Fermer" Padding="10 3" Click="Fermer_Button_Click"/>
        </DockPanel>
    </Grid>
</Window>
