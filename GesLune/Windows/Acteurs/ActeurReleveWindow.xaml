<Window x:Class="GesLune.Windows.Acteurs.ActeurReleveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GesLune.Windows.Acteurs"
        mc:Ignorable="d"
        Title="ActeurReleveWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="MainDataGrid"
                  Grid.Row="0"
                  AutoGenerateColumns="True"
                  ItemsSource="{Binding Releve}"
                  >
        </DataGrid>
        <DockPanel Grid.Row="1" HorizontalAlignment="Center">
            <Label Content="Du:"/>
            <DatePicker SelectedDate="{Binding DateDu}" SelectedDateChanged="DatePicker_SelectedDateChanged"/>
            <Label Content="Au:"/>
            <DatePicker SelectedDate="{Binding DateAu}" SelectedDateChanged="DatePicker_SelectedDateChanged"/>
        </DockPanel>
    </Grid>
</Window>
