<Window x:Class="GesLune.PosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:GesLune.Sdk.ViewModels;assembly=GesLune.Sdk"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding Title}"
        Height="450"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ButtonBase.Click="Window_Click"
        >
    <Window.DataContext>
        <vms:PosViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="Button"
               x:Key="CategorieButtonStyle"
               BasedOn="{StaticResource ButtonStyle}"
               >
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="Button"
               x:Key="ArticleButtonStyle"
               BasedOn="{StaticResource ButtonStyle}"
               >
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>
    <Grid  FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <!--Column 0-->
        <ItemsControl Grid.Row="0"
                      Grid.Column="0"
                      ItemsSource="{Binding Categories}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button x:Name="CategorieButton"
                            Content="{Binding Categorie_Nom}"
                            Margin="5"
                            Command="{Binding DataContext.SelectCategorieCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource CategorieButtonStyle}"
                            />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <UniformGrid Grid.Row="2"
                     Grid.Column="0"
              >
            <Button x:Name="SearchArticleButton"
                    Click="SearchArticleButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    >
                <md:PackIcon Kind="Search" Width="50" Height="50"/>
            </Button>
            <Separator/>
            <Button x:Name="PageSuivanteButton"
                    Click="PageSuivanteButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    >
                <md:PackIcon Kind="ArrowRight" Width="50" Height="50"/>
            </Button>
            <Button x:Name="PagePrecedenteButton"
                    Click="PagePrecedenteButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    >
                <md:PackIcon Kind="ArrowLeft" Width="50" Height="50"/>
            </Button>
            
        </UniformGrid>
        
        <!--Column 1-->
        <UniformGrid Grid.Row="0"
                     Grid.RowSpan="2"
                     Grid.Column="1"
                     Columns="1"
                    >
            <Button Style="{StaticResource ButtonStyle}" Content="نقود" Name="EspeceButton" Click="EspeceButton_Click"/>
            <Button Style="{StaticResource ButtonStyle}" Content="سلف" Name="CreditButton" Click="CreditButton_Click"/>
            <Button Style="{StaticResource ButtonStyle}" Content="شيك" Name="ChequeButton" Click="ChequeButton_Click"/>
            <Button Style="{StaticResource ButtonStyle}" Content="الغاء الدفع" Name="AnnulerPaiementButton" Click="AnnulerPaiementButton_Click"/>
        </UniformGrid>
        
        <!--Column 2-->
        <UniformGrid Grid.Row="0"
                     Grid.Column="2"
                     Columns="4"
                    >
            <Label Content="البيع بالتقسيط"/>
            <Label Content="{Binding Ticket.Document_Num}"/>
            <Label Content="{Binding Ticket.Document_Acteur_Nom}"/>
            <Label Content="{Binding Total}"
                       ContentStringFormat="المجموع : {0} درهم"
                       />
        </UniformGrid>

        <DataGrid Grid.Row="1"
                  Grid.Column="2"
                  Background="White"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Lignes}"
                  SelectedItem="{Binding SelectedLigne}"
                  IsReadOnly="True"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="الكمية" Binding="{Binding Document_Ligne_Quantity}"/>
                <DataGridTextColumn Width="3*" Header="الاسم" Binding="{Binding Document_Ligne_Article_Nom}"/>
                <DataGridTextColumn Width="*" Header="التمن" Binding="{Binding Document_Ligne_Prix_Unitaire}"/>
                <DataGridTextColumn Width="*" Header="المجموع" Binding="{Binding Document_Ligne_Total}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2"
              Grid.Column="2">
            <ItemsControl VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                          ItemsSource="{Binding Articles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5" Rows="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.AddArticleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                    CommandParameter="{Binding}"
                    Style="{StaticResource ArticleButtonStyle}"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Padding="5">
                            <md:Card x:Name="ArticleButton"
                         MaxWidth="150">
                                <!-- Constrain the width of the Card -->
                                <TextBlock Text="{Binding Article_Nom}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center" />
                            </md:Card>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Label Content="{Binding PageActuelle}"
                   ContentStringFormat=" صفحة {0}"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="left"
                   />
        </Grid>
        
        <!--Column 3-->
        <UniformGrid Grid.Row="0"
                     Grid.Column="3"
                     Grid.RowSpan="3"
                     Columns="1"
                    >
            <Button Style="{StaticResource ButtonStyle}" Content="اختيار الزبون" Name="ChoixClientButton" Click="ChoixClientButton_Click"/>
            <Button Style="{StaticResource ButtonStyle}" Name="PlusQteButton" Click="PlusQteButton_Click">
                <md:PackIcon Kind="Plus"/>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" Name="MoinsQteButton" Click="MoinsQteButton_Click">
                <md:PackIcon Kind="Minus"/>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" Name="ImprimerButton" Click="ImprimerButton_Click">
                <md:PackIcon Kind="Printer"/>
            </Button>
            <Button Style="{StaticResource ButtonStyle}" Name="SupprimerLigneButton" Click="SupprimerLigneButton_Click">
                <md:PackIcon Kind="Trash"/>
            </Button>
        </UniformGrid>
        
    </Grid>
</Window>
